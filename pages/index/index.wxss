/* pages/index/index.wxss */
.weather-wrapper{
  position: relative;
  padding-top:20rpx;
  padding-bottom: 250rpx;
}
.cover{
  position: absolute;
  top:0;
  left:0;
  right:0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.location-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom:20rpx;
}
.location-content{
  display: flex;
  align-items: center;
  justify-content: center;
}
.location-text{
  font-size: 30rpx;
  line-height: 42rpx;
  height: 42rpx;
  opacity: 0.5;
}
.location-icon{
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.temp{
  text-align: center;
  font-size: 200rpx;
  line-height:280rpx;
  opacity: 0.8 
}
.weather{
  text-align: center;
  margin-top:30rpx;
  opacity: 0.6

}
.future-weather{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom:45rpx;
 
}
.timeIcon{
 width: 36rpx;
 height: 28rpx;
 margin-right: 10rpx;
}
.timeText{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.forecast-list{
  display: flex;  
}
.forecast-item{
  width:120rpx;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}
.weatherIcon{
  width: 90rpx;
  height: 90rpx;
  margin:45rpx 0;
}
.today-weather{
  display:flex;
  align-items:center;
  justify-content:space-between;
  font-size:30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  position:absolute;
  bottom:0;
  left:40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top:1px solid rgba(0,0,0,0.1);
}
.rightArrow{
  width: 13rpx;
  height: 24rpx;
}